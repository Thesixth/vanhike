<%- layout('layouts/boilerplate') %>
<form
  action="/hikes/<%=singlehike._id%>?_method=put"
  method="POST"
  novalidate
  class="needs-validation"
>
  <div class="mb-3">
    <label class="form-label" for="title">Title</label>
    <input
      class="form-control"
      type="text"
      name="hike[title]"
      id="title"
      value="<%= singlehike.title  %>"
      required
    />
    <div class="invalid-feedback">Please provide a title.</div>
  </div>
  <div class="mb-3">
    <label class="form-label" for="description">Description</label>
    <input
      class="form-control"
      type="text"
      name="hike[description]"
      id="description"
      value="<%= singlehike.description  %>"
      required
    />
    <div class="invalid-feedback">Please provide a description.</div>
  </div>
  <div class="mb-3">
    <label class="form-label" for="image">Image Url</label>
    <input
      class="form-control"
      type="text"
      name="hike[image]"
      id="image"
      value="<%= singlehike.description  %>"
      required
    />
    <div class="invalid-feedback">Please provide a image url.</div>
  </div>
  <div class="mb-3">
    <label class="form-label" for="location">Location</label>
    <input
      class="form-control"
      type="text"
      name="hike[location]"
      id="location"
      value="<%= singlehike.description  %>"
      required
    />
    <div class="invalid-feedback">Please provide a location.</div>
  </div>
  <button class="btn btn-success">Update Hike</button>
</form>
<a href="/hikes/<%=singlehike._id%>">Cancel</a>
