<%- layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-6">
    <h1><%= singlehike.title %></h1>
    <p><%= singlehike.location %></p>
    <p>Created by: <%= singlehike.author.username %></p>
    <p><%= singlehike.description %></p>
    <a href="/hikes/<%= singlehike._id %>/edit" class="btn">Edit</a>
    <a href="/hikes">Back to all Hikes</a>
    <form action="/hikes/<%= singlehike._id %>?_method=delete" method="POST">
      <button class="btn btn-danger">Delete</button>
    </form>
  </div>
  <div class="col-6">
    <form
      action="/hikes/<%= singlehike._id %>/review"
      method="POST"
      novalidate
      class="mb-3 needs-validation"
    >
      <h2>Leave A review</h2>
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input
          class="form-range"
          min="1"
          max="5"
          type="range"
          name="review[rating]"
          id="rating"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="review">Review</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="review"
          cols="30"
          rows="3"
          required
        ></textarea>
        <div class="invalid-feedback">Please provide a review.</div>
      </div>

      <button class="btn btn-success">Submit</button>
    </form>
    <% for(let review of singlehike.reviews) { %>
    <div class="card card-body mb-3">
      <h4 class="card-title">Rating: <%= review.rating %></h4>
      <p class="card-text">Review: <%= review.body %></p>
      <form
        action="/hikes/<%= singlehike._id %>/review/<%= review._id %>?_method=DELETE"
        method="POST"
      >
        <button class="btn btn-sm btn-danger">Delete</button>
      </form>
    </div>
    <% } %>
  </div>
</div>
